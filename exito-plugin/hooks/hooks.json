{
    "description": "Session management hooks for senior engineer workflow. Automatically initializes sessions on task start and performs cleanup on session end.",
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Task",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-manager.sh",
                        "timeout": 30
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-cleanup.sh",
                        "timeout": 30
                    }
                ]
            }
        ]
    }
}