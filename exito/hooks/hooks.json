{
    "description": "Session lifecycle hooks for senior engineer workflow. Performs cleanup on session end.",
    "hooks": {
        "SessionEnd": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-cleanup.sh",
                        "timeout": 30
                    }
                ]
            }
        ]
    }
}